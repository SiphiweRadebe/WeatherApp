@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar bg-dark text-white p-3">
        <h3 class="text-center mb-4">
            <i class="bi bi-cloud-sun-fill"></i> Weather App
        </h3>

        <nav class="nav flex-column">
            <NavLink class="nav-link text-white" href="" Match="NavLinkMatch.All">
                <i class="bi bi-house-door"></i> Dashboard
            </NavLink>
            <NavLink class="nav-link text-white" href="cities">
                <i class="bi bi-building"></i> Cities
            </NavLink>
            <NavLink class="nav-link text-white" href="alerts">
                <i class="bi bi-exclamation-triangle"></i> Alerts
            </NavLink>
        </nav>
    </div>

    <main class="main-content">
        <div class="container-fluid p-4">
            @Body
        </div>
    </main>
</div>

<style>
    .page {
        display: flex;
        min-height: 100vh;
    }

    .sidebar {
        width: 250px;
        position: fixed;
        height: 100vh;
        overflow-y: auto;
    }

    .main-content {
        margin-left: 250px;
        width: calc(100% - 250px);
    }

    .nav-link {
        padding: 0.75rem 1rem;
        border-radius: 4px;
        margin-bottom: 0.5rem;
    }

    .nav-link:hover {
        background-color: rgba(255,255,255,0.1);
    }

    .nav-link.active {
        background-color: rgba(255,255,255,0.2);
    }
</style>