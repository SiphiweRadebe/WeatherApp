@page "/"
@using WeatherApp.Web.Services
@using WeatherApp.Web.Models
@inject IWeatherApiClient ApiClient

<PageTitle>Weather Dashboard</PageTitle>

<h1 class="mb-4">Weather Dashboard</h1>

@if (isLoading)
{
    <div class="text-center my-5">
        <div class="spinner-border text-primary" role="status"></div>
        <p>Loading...</p>
    </div>
}
else
{
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h3>@cities.Count</h3>
                    <p>Total Cities</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h3>@alerts.Count</h3>
                    <p>Active Alerts</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        @foreach (var city in cities)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@city.Name</h5>
                        <p class="card-text">@city.Country</p>
                        <a href="/weather/@city.Id" class="btn btn-primary btn-sm">View Weather</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<CityViewModel> cities = new();
    private List<AlertViewModel> alerts = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        cities = await ApiClient.GetAllCitiesAsync();
        alerts = await ApiClient.GetActiveAlertsAsync();
        isLoading = false;
    }
}}